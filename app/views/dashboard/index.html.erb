<div class="container my-4">
  <h1 class="text-center" style="color: #2c3e50;">Dashboard</h1>

  <div class="text-center mb-4">
    <strong>Total Balance:</strong> <%= number_to_currency(@balance) %> |
    <strong>Total You Owe:</strong> <%= number_to_currency(@total_you_owe) %> |
    <strong>Total Due To You:</strong> <%= number_to_currency(@total_due_to_you) %>
  </div>

  <!-- Button group for adding expenses/payments -->
  <div class="d-flex justify-content-center mb-4">
    <%= link_to "Add an Expense", new_expense_path, class: "btn btn-success me-2" %>
    <%= link_to "Settle Payment", new_payment_path, class: "btn btn-primary" %>
  </div>

  <h2>Your Expenses</h2>
  <% @expenses.each do |expense| %>
    <div class="mb-3">
      <strong><%= expense.description %></strong> -
      <%= number_to_currency(expense.total_amount) %> on <%= expense.date %>
    </div>
  <% end %>

  <h2>Friends Who Owe You</h2>
  <% @friends_who_owe_you.each do |friend_id, amount| %>
    <% friend = User.find(friend_id) %>
    <div class="mb-1">
      <%= friend.email %>: <%= number_to_currency(amount) %>
    </div>
  <% end %>

  <h2>Friends You Owe</h2>
  <% @owed_friends.each do |friend_id, amount| %>
    <% friend = User.find(friend_id) %>
    <div class="mb-1">
      <%= friend.email %>: <%= number_to_currency(amount) %>
    </div>
  <% end %>
</div>
