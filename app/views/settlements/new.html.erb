<%= form_with(url: settle_up_path, method: :post, local: true) do |form| %>
  <%= form.label :other_user_id, "Select Friend" %>
  <%= form.collection_select :other_user_id, User.where.not(id: current_user.id), :id, :email, {}, { class: 'form-control' } %>

  <%= form.label :amount, "Amount to Pay" %>
  <%= form.number_field :amount, step: :any, class: 'form-control' %>

  <%= form.submit "Settle Up", class: 'btn btn-primary' %>
<% end %>